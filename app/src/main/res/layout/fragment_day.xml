<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacer_small"
    android:paddingStart="@dimen/spacer_large"
    android:paddingEnd="@dimen/spacer_large"
    android:layout_marginTop="?attr/actionBarSize"

    tools:context=".dayview.DayFragment">


    <TextView
        android:id="@+id/text_view_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/spacer_small"
        android:paddingBottom="@dimen/spacer_medium"
        android:text="@string/day"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/text_view_calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/text_view_day'
        android:background="@drawable/text_view_lines"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/spacer_medium"
        android:paddingBottom="@dimen/spacer_medium"
        android:text="@string/text_day_calculation"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_label_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/text_view_calculation'
        android:gravity="start"
        android:paddingTop="@dimen/spacer_small"
        android:paddingBottom="@dimen/spacer_small"
        android:text="@string/text_day_label_name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_view_label_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/text_view_calculation'
        android:gravity="end"
        android:paddingTop="@dimen/spacer_small"
        android:paddingBottom="@dimen/spacer_small"
        android:text="@string/text_day_label_calories"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/list_view_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/text_view_label_calories'

        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_add_meal"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/add_white_24dp"/>
</RelativeLayout>