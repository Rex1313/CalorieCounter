<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacerSmall"
    android:paddingStart="@dimen/spacerLarge"
    android:paddingEnd="@dimen/spacerLarge"

    tools:context=".DayFragment">


    <TextView
        android:id="@+id/text_view_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/spacerSmall"
        android:paddingBottom="@dimen/spacerMedium"
        android:text="@string/day"
        android:textSize="@dimen/textMedium" />

    <TextView
        android:id="@+id/text_view_calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/text_view_day'
        android:background="@drawable/text_view_lines"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/spacerMedium"
        android:paddingBottom="@dimen/spacerMedium"
        android:text="@string/textDayCalculation"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_label_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/text_view_calculation'
        android:gravity="start"
        android:paddingTop="@dimen/spacerSmall"
        android:paddingBottom="@dimen/spacerSmall"
        android:text="@string/textDayLabelName"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_view_label_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/text_view_calculation'
        android:gravity="end"
        android:paddingTop="@dimen/spacerSmall"
        android:paddingBottom="@dimen/spacerSmall"
        android:text="@string/textDayLabelCalories"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/list_view_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>