<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dayview.DayFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/relative_layout_top"
    android:background="@color/colorPrimary"
    >
    <TextView
        android:id="@+id/text_view_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day"
        android:layout_marginStart="@dimen/card_padding"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:textColor="@color/title_material_colour_opposite"

        />

    <TextView
        android:id="@+id/text_view_calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/text_view_day'
        android:paddingTop="@dimen/spacer_medium"
        android:paddingBottom="@dimen/spacer_medium"
        android:text="@string/text_day_calculation"
        android:textSize="@dimen/subheader_text_size"
        android:textColor="@color/subtitle_material_colour_opposite"
        />


</RelativeLayout>
    <ListView
        android:id="@+id/list_view_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below='@id/relative_layout_top'

        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_add_meal"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/add_white_24dp"/>
</RelativeLayout>