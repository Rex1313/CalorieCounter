<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/widget_width_small"
    android:layout_height="@dimen/widget_height_small"
    android:background="@drawable/widget_simple_background"
    android:id="@+id/relative_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@+id/linearlayout_add"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textview_calories_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="---"
            android:textColor="@color/colorTextOnBackgroundHighEmphasis"
            android:textSize="@dimen/widget_calories_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/widget_add_button_size"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/colorBackgroundAccent"
        android:id="@+id/linearlayout_add"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/widget_add_size"
            android:layout_height="@dimen/widget_add_size"
            android:src="@drawable/add_white_24dp" />
    </LinearLayout>
</RelativeLayout>