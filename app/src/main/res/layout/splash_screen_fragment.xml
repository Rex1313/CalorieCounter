<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <VideoView android:id="@+id/video_view_welcome"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </VideoView>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/days_one"
        android:gravity="top|center"
        android:layout_marginTop="@dimen/spacer_large"
        android:text="@string/toolbar_main_title"
        android:textSize="@dimen/welcome_screen_title" />

    <Button
        android:id="@+id/button_welcome"
        android:layout_marginBottom="@dimen/spacer_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextOnBackgroundHighEmphasis"
        android:textSize="@dimen/welcome_screen_button"
        android:padding="@dimen/card_padding"
        android:layout_gravity="bottom|center"
        android:text="@string/buttons_splash_screen" />
</FrameLayout>